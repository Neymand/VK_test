
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Application Schema",
  "type": "object",
  "properties": {
    "kind": {
      "type": "string",
      "maxLength": 32
    },
    "name": {
      "type": "string",
      "maxLength": 128
    },
    "description": {
      "type": "string",
      "maxLength": 4096
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-([a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*))?(?:\\+([a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*))?$"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "specification": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["specification"]
    },
    "settings": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["kind", "name", "description", "version", "configuration", "settings"]
}
